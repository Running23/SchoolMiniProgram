<!--头像名字信息-->
<view class='personal-container'>

  <!--第一部分-->
  <view class='user-container'>
    <!--头像-->
    <view class='usericon'>
      <open-data class="usericonimg" type="userAvatarUrl"></open-data>
    </view>
    <!--名字-->
    <view class='nickName'><open-data type="userNickName"></open-data></view>
    
  </view>

  <!--第二部分-->
  <view class='advert'>
      <text>校程序 | 解你所忧</text>
      <image src='../../images/book.png' mode='aspectFit'></image> 
  </view>

  <!--第三部分:各列表项-->
  <view class='personal-list'>

    <!--第一项-->  
    <view class='list-item'>
      <view class='item'> 

        <view class='item-image'><image src='../../images/orderform.png' mode='aspectFit'></image></view> 
        <view class='item-text'>查看订单</view>
        <view class="item-icon" ><image src='../../images/arrowright.png' mode='aspectFit'></image></view>  
      </view>  
    </view>
    

    <!--第二项-->
    <view class='list-item'>
      <view class='item'> 
        <view class='item-image'><image src='../../images/task.png' mode='aspectFit'></image></view> 
        <view class='item-text'>已发任务</view>
        <view class="item-icon" ><image src='../../images/arrowright.png' mode='aspectFit'></image></view>
      </view>  
    </view>

    <!--第三项-->
    <view class='list-item'>
      <view class='item'> 
        <view class='item-image'><image src='../../images/message.png' mode='aspectFit'></image></view> 
        <view class='item-text'>系统消息</view>
        <view class="item-icon" ><image src='../../images/arrowright.png' mode='aspectFit'></image></view>
      </view>  
    </view>

    <!--第四项-->
    <view class='list-item'>
      <view class='item'> 
        <view class='item-image'><image src='../../images/customservice.png' mode='aspectFit'></image></view> 
        <view class='item-text'>客服电话</view>
        <view class="item-icon" ><image src='../../images/arrowright.png' mode='aspectFit'></image></view>
      </view> 
    </view>
  </view>
  

</view>

